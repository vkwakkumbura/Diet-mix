 /******************************CUSTUMIZED MODEL FOR DIET MIXING**********************************************/
 
 
 /****************************************************************************************************************************/
 
 
 /****************************************************************************************************************************/
 
 
 
 

 
 //Data
 
{string} Ingr = ...;
{string} Nut = ...;




float CostRaw[Ingr][Nut] = ...;
float  price[Ingr] = ...;
float Stock[Nut] = ...;

//Decision Variables

dvar boolean InUse[Ingr];


//Expression
dexpr float Cost =
  sum(i in Ingr)
    
         (price[i] *InUse[i] );
         
   

minimize Cost;


//Model

subject to {
  forall(m in Nut )
    ct:
      sum( i in Ingr ) 
        CostRaw[i][m] * InUse[i] == Stock[m];
  
      
}






 